<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JoyOfFastDelivery.Views.AddCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#c2e4ff"
    NavigationPage.HasNavigationBar="True"
    Title="Dodaj novu karticu">

	<StackLayout Margin="20">
		<Label Text="Unesite broj kartice:" FontSize="20" TextColor="#2D2D2D" />
		<Frame CornerRadius="10" Padding="5" BackgroundColor="White" Margin="0,20,0,0">
			<Entry x:Name="cardNumberEntry" Placeholder="**** **** **** ****" FontSize="18" />
		</Frame>


		<Button Clicked="SaveCard_Clicked" Text="Spremi karticu" BackgroundColor="#4281ff" TextColor="White"
                FontSize="20" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,20,0,0"/>
	</StackLayout>

</ContentPage>
